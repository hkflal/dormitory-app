{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/en/**",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/zh-hk/**",
        "destination": "/",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/api/generate-invoice-docx-manual",
        "function": "generateInvoiceDocxManual"
      },
      {
        "source": "/api/regenerate-invoice-docx",
        "function": "regenerateInvoiceDocx"
      },
      {
        "source": "/api/process-invoice-data",
        "function": "processInvoiceData"
      },
      {
        "source": "/api/health-check",
        "function": "healthCheck"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": []
    }
  ],
  "firestore": {
    "database": "(default)",
    "location": "asia-east2",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
